# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[**.{css,scss,less,sass}]
indent_style = space
indent_size = 2
insert_final_newline = true

[**.{js,json,md}]
indent_style = space
indent_size = 2
insert_final_newline = true

[**.html]
indent_style = tab
insert_final_newline = false